<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @post %>

  <div>
    <%= link_to "Edit this post", edit_post_path(@post), :class=>"btn btn-info btn-sm mt-4 me-2" %>
    <%= link_to "Back to posts", posts_path, :class=>"btn btn-secondary btn-sm mt-4 me-2" %>
    <%= button_to "Destroy this post", @post, method: :delete, :class=>"btn btn-danger btn-sm mt-4" %>
  </div>
</div>

